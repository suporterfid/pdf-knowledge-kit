# Example environment configuration for pdf-knowledge-kit

# ---------------------------------------------------------------------------
# API keys for admin ingestion endpoints
# Default development values are admin/oper/view
ADMIN_API_KEY=admin
OP_API_KEY=oper
VIEW_API_KEY=view

# ---------------------------------------------------------------------------
# Database
PGHOST=db
PGPORT=5432
PGDATABASE=pdfkb
PGUSER=postgres
PGPASSWORD=supersecret
POSTGRES_DB=pdfkb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=supersecret
POSTGRES_DB=pdfkb
DATABASE_URL=postgresql://postgres:supersecret@db:5432/pdfkb


# ---------------------------------------------------------------------------
# Logging
LOG_DIR=logs/
LOG_LEVEL=INFO
LOG_JSON=false
LOG_REQUEST_BODIES=false
LOG_RETENTION_DAYS=7
LOG_ROTATE_UTC=false

# ---------------------------------------------------------------------------
# Ingestion
DOCS_DIR=./docs
URLS_FILE=urls.txt
ENABLE_OCR=1
OCR_LANG=eng+por+spa

# ---------------------------------------------------------------------------
# Uploads and chat
UPLOAD_DIR=tmp/uploads
UPLOAD_TTL=3600
UPLOAD_MAX_SIZE=5242880
UPLOAD_MAX_FILES=5
UPLOAD_ALLOWED_MIME_TYPES=application/pdf
CHAT_MAX_MESSAGE_LENGTH=5000
SESSION_ID_MAX_LENGTH=64
ADMIN_UI_ORIGINS=

