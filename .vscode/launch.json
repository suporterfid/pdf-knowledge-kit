{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Attach FastAPI (Docker)",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false,
      "preLaunchTask": "compose: up"
    },
    {
      "name": "Frontend: Launch Chrome (Vite)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend",
      "runtimeArgs": ["--new-window"],
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Fullstack: Backend + Frontend",
      "configurations": [
        "Backend: Attach FastAPI (Docker)",
        "Frontend: Launch Chrome (Vite)"
      ]
    }
  ]
}
